{
    "extends": "airbnb",
    "globals": {
        "window": true
    },
    "rules": {
        "no-console": "off",
        "no-unused-vars": "warn",
        "linebreak-style": "off",
        "react/jsx-indent": [4, "tab"],
        "react/jsx-indent-props": [4, 4],
        "react/no-unused-state": "warn",
        "react/no-array-index-key": "off",
        "indent": ["error", 4],
        "class-methods-use-this": "off",
        "no-unused-expressions": "off",
        "no-plusplus":"off"
    }
}
